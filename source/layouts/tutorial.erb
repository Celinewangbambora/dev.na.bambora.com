<!doctype html>
<html>
  <head>
    <%= partial "layouts/head" %>
  </head>

  <body class="<%= page_classes %>">
  
    <%= partial "layouts/header" %>

    <div class="container">
      
      <%= partial "layouts/breadcrumb_trail" %> 

      <% if current_page.data.in_page_toc %>
        <%= partial "layouts/toc" %>
      <% else %> 
        <%= partial "layouts/side_nav" %>
      <% end %> 

      <div class="row">
        <div class="col-md-9 col-md-offset-3 js-toc-content">

          <div class="markdown">
            <%= yield %> 
          </div>
          
          <% current_page.data.includes && current_page.data.includes.each do |include| %>
            <%= partial "#{current_page.data.includes_root}/includes/#{include}" %>
          <% end %> 
        </div>
      </div>
    </div>

    <%= partial "layouts/footer" %>

    <%= javascript_include_tag "page/tocbot_init_script" %>

  </body>
</html>
